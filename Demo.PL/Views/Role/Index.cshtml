@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success">Create New Role</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <h1>All Roles</h1>
    <br />
    <br />

    <div class="row mt-5 mb-3">
        <form asp-action="Index" class="row">
            <div class="col-8">
                <input type="text" name="SearchValue" placeholder="Role Of Users" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" />
            </div>
        </form>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.RoleName)</td>
               
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                   
                    <partial name="_ButtonPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning">
        <h3>There Is No Users</h3>
    </div>
}
