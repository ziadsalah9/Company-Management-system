@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

    <div asp-validation-summary="All"></div>
    <form asp-action="ConfirmDelete">

        <div class="form-group">
            <label class="col-form-label" asp-for="Id"></label>
            <input readonly class="form-control" asp-for="Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="RoleName"></label>
            <input readonly class="form-control" asp-for="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light">Back To List</a>

    </form>


